<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
  <mapper namespace="com.example.teamproject.Mapper.LoginMapper">
  
  	<!-- 회원 로그인  -->
  	<select id="member_login_check" resultType="com.example.teamproject.Vo.MemberVo">
  	
  		select * from member3 where M_ID=#{M_ID} and M_PW=#{M_PW}
  	
  	</select>
  
  	<!-- 시설 관리자 로그인  -->
  	<select id="Fmanager_login_check" resultType="com.example.teamproject.Vo.FmanagerVo">
  	
  		select * from fmanager3 where fm_id=#{fm_id} and fm_pw=#{fm_pw}
  	
  	</select>
  	
  	<!-- 회원 회원 가입  -->
  	<insert id="member_register_check">
  	
  	insert into member3(m_no,m_id,m_pw,m_name,m_nickname,m_email,m_point) values(member3_seq.nextval,#{m_id},#{m_Pw},#{m_Name},#{m_Nickname},#{m_Email},0)
  	
  	</insert>
  	
  	<!-- 시설 관리자 회원 가입  -->
  	<insert id="fac_register_check">
  	
  	insert into fmanager3(fm_id,fm_pw,fm_name,fm_add1,fm_phone) values(#{fm_id},#{fm_pw},#{fm_name},#{fm_add1},#{fm_phone})
  	
  	</insert>
  	
  	<!-- 회원 아이디 찾기-->
  	<select id="member_ld_find_check" resultType="com.example.teamproject.Vo.MemberVo">
  	
  		select * from member3 where M_NICKNAME=#{M_NICKNAME} and M_eMAIL=#{M_eMAIL}
  	
  	</select>
  	
  	<!-- 회원 비밀번호 찾기-->
  	<select id="member_pw_find_check" resultType="com.example.teamproject.Vo.MemberVo">
  	
  		select * from member3 where M_NAME=#{M_NAME} and M_eMAIL=#{M_eMAIL}
  	
  	</select>
  	
  	<!-- 시설 아이디 찾기-->
  	<select id="fac_ld_find_check" resultType="com.example.teamproject.Vo.FmanagerVo">
  	
  			select * from fmanager3 where fm_name=#{fm_name} and fm_phone=#{fm_phone}
  	
  	</select>
  	
  	<!-- 시설 아이디 찾기-->
  	<select id="fac_pw_find_check" resultType="com.example.teamproject.Vo.FmanagerVo">
  	
  			select * from fmanager3 where fm_id=#{fm_id} and fm_phone=#{fm_phone}
  	
  	</select>

  	<!-- 관리자 로그인 -->
  	<select id="admin_login" resultType="com.example.teamproject.Vo.AdminVo">
  	
  			select * from admin3 where A_ID=#{a_ID} and A_PW=#{a_PW}
  	
  	</select>
  	
  
  </mapper>